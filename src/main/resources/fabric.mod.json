{
	"schemaVersion": 1,
	"id": "keepalldrops",
	"version": "${version}",
	"name": "Keep All Drops",
	"description": "A simple client side mod which makes that makes every explosion drop all the items, so no more item loss from explosions",
	"authors": [
		"Qu8it"
	],
	"contact": {
		"homepage": "https://fabricmc.net/",
		"sources": "https://github.com/FabricMC/fabric-example-mod"
	},
	"license": "MIT",
	"icon": "assets/keepalldrops/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"io.github.programer3.keepalldrops.KeepAllDrops"
		],
		"client": [
			"io.github.programer3.keepalldrops.KeepAllDropsClient"
		]
	},
	"mixins": [
		"keepalldrops.mixins.json",
		{
			"config": "keepalldrops.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.17.3",
		"minecraft": "~1.21.8",
		"java": ">=21",
		"fabric-api": "*"
	},
	"suggests": {
		"another-mod": "*"
	}
}